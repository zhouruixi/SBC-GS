{
    "widgets": [
        {
            "type": "IconTplTextWidget",
            "name": "CPU load widget",
            "x": 10,
            "y": 30,
            "icon_path": "memory.png",
            "template": "CPU: %u IO: %u",
            "facts": [
                {"name": "os_mon.cpu.load_total"},
                {"name": "os_mon.cpu.load_iowait"}
            ]
        },
        {
            "type": "IconTplTextWidget",
            "name": "Thermal sensors",
            "x": 10,
            "y": 60,
            "icon_path": "device_thermostat.png",
            "template": "CPU: %.0f⁰C, GPU: %.0f⁰C",
            "facts": [
                {"name": "os_mon.temperature",
                 "tags": {"name": "soc-thermal"},
                 "convert": "x / 1000"},
                {"name": "os_mon.temperature",
                 "tags": {"name": "gpu-thermal"},
                 "convert": "x / 1000"}
            ]
        },
        {
            "type": "IconTplTextWidget",
            "name": "Battery usage widget",
            "__comment": "Make sure you have only one power sensor! Otherwise filter them by tags",
            "x": 10,
            "y": 90,
            "icon_path": "battery_android_frame_full.png",
            "template": "Power: %.2fV, %.2fA, %.2fW",
            "facts": [
                {"name": "os_mon.power.voltage",
                 "convert": "x / 1000"},
                {"name": "os_mon.power.current",
                 "convert": "x / 1000"},
                {"name": "os_mon.power.power",
                 "convert": "x / 1000000"}
            ]
        }
    ]
}
